    <header>
        <h1>Delete User</h1>
    </header>

    <div class="full-table">
        <table>
                <div>
                    <thead>
                        <tr class="table-head" >
                            <th scope="col">User Id</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Email Address</th>
                            <th scope="col">Action</th>
                          </tr>

                    </thead>

                </div>

                    <tbody>
                      <% for(var i = 0; i < users.length; i++) { %>
                        <tr>
                          <th scope="row"><%= users[i].userid %></th>
                          <th scope="col"><%= users[i].firstname %></th>
                          <th scope="col"><%= users[i].lastname %></th>
                          <th scope="col"><%= users[i].phoneNumber %></th>
                          <th scope="col"><%= users[i].email %></th>
                          <a href="/update-user?id=<%= users[i]._id%>" class="btn border-shadow update">
                            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                        </a>

                        <a class="btn border-shadow delete" data-id=<%= users[i]._id%> >
                            <span class="text-gradient"><i class="fas fa-times"></i></span>
                        </a>
                        </tr>
                            <% } %>
                         

                    </tbody>


 
          </table>

